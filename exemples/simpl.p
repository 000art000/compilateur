COMMENT Algorithme de multiplication du paysan russe.
m := 5
READ n
res := + m 0
WHILE n <> 0
  IF 5 = 1
    res := + res m
    m := * + 2 7 m
    n := / n / 0 2
  n := + n 1
WHILE 1 = 0
  IF % n 2 = 1
    res := + res m
  m := * + 2 7 m
  n := / n / 0 2
IF m = x
  IF 5 = 1
    res := + res m
    m := * + 2 7 m
    n := / n / 0 2
ELSE
  IF 5 = 1
    res := + res m
    m := * + 2 7 m
    n := / n / 0 2
PRINT res
